<Window x:Class="Theoria.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Theoria.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="Theoria – Theology &amp; Philosophy Search Engine"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:SearchViewModel/>
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header / Mode toggle -->
            <RowDefinition Height="Auto"/>
            <!-- Search bar -->
            <RowDefinition Height="*"/>
            <!-- Results list -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header and mode toggle -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,8">
            <TextBlock Text="Theoria"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <CheckBox Content="Direct Search (no API)"
                          IsChecked="{Binding UseLocalEngine}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"
                          ToolTip="When checked, searches the internet directly. Uncheck to relay through the hosted Theoria.Api."/>
            </StackPanel>
        </DockPanel>

        <!-- Row 1: Search input -->
        <DockPanel Grid.Row="1"
                   Margin="0,0,0,8">
            <Button Content="Search"
                    Command="{Binding SearchCommand}"
                    DockPanel.Dock="Right"
                    Padding="16,6"
                    Margin="8,0,0,0"/>
            <TextBox Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14"
                     Padding="6"
                     VerticalContentAlignment="Center">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return"
                                Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </DockPanel>

        <!-- Row 2: Search results -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding Results}"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  ScrollViewer.ScrollChanged="ListView_ScrollChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4,8">
                        <TextBlock FontSize="15"
                                FontWeight="SemiBold">
                            <Hyperlink NavigateUri="{Binding Url}"
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="#1a0dab"
                                       TextDecorations="None">
                                <Run Text="{Binding Title, Mode=OneWay}"/>
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Text="{Binding Url}"
                                   FontSize="11"
                                   Foreground="#006621"
                                   Margin="0,2,0,4"/>
                        <TextBlock Text="{Binding Snippet}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="#545454"/>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,4,0,0">
                            <TextBlock Text="{Binding Score, StringFormat='Score: {0:F3}'}"
                                       FontSize="11"
                                       Foreground="#999999"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Row 3: Status bar -->
        <StatusBar Grid.Row="3"
                   Margin="0,4,0,0">
            <TextBlock Text="{Binding StatusText}"/>
        </StatusBar>
    </Grid>
</Window>
