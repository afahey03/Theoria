<Window x:Class="Theoria.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Theoria.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="Theoria – Theology &amp; Philosophy Search Engine"
        Height="750"
        Width="1020"
        MinWidth="640"
        MinHeight="480"
        WindowStartupLocation="CenterScreen"
        Background="#FAF8F5"
        Icon="aq.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Warm scholarly palette -->
        <SolidColorBrush x:Key="HeaderBg"
                         Color="#3C2415"/>
        <SolidColorBrush x:Key="HeaderFg"
                         Color="#F5F0E8"/>
        <SolidColorBrush x:Key="AccentBrush"
                         Color="#8B6F4E"/>
        <SolidColorBrush x:Key="AccentDark"
                         Color="#6B4C30"/>
        <SolidColorBrush x:Key="CardBg"
                         Color="#FFFDF9"/>
        <SolidColorBrush x:Key="CardBorder"
                         Color="#E8DDD0"/>
        <SolidColorBrush x:Key="TextPrimary"
                         Color="#2D2A26"/>
        <SolidColorBrush x:Key="TextSecondary"
                         Color="#8A7968"/>
        <SolidColorBrush x:Key="LinkColor"
                         Color="#5B3A1A"/>
        <SolidColorBrush x:Key="UrlColor"
                         Color="#7A9A6A"/>
        <SolidColorBrush x:Key="PageBg"
                         Color="#FAF8F5"/>

        <!-- Search button style -->
        <Style x:Key="SearchBtn"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{StaticResource AccentDark}"/>
            <Setter Property="Foreground"
                    Value="{StaticResource HeaderFg}"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Padding"
                    Value="22,8"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Opacity"
                            Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Load more button style -->
        <Style x:Key="LoadMoreBtn"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="{StaticResource AccentDark}"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Padding"
                    Value="24,8"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource CardBorder}"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="{StaticResource AccentDark}"/>
                                <Setter TargetName="Bd"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentDark}"/>
                                <Setter Property="Foreground"
                                        Value="{StaticResource HeaderFg}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search input style -->
        <Style x:Key="SearchInput"
               TargetType="TextBox">
            <Setter Property="FontSize"
                    Value="15"/>
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="Background"
                    Value="{StaticResource CardBg}"/>
            <Setter Property="Foreground"
                    Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness"
                    Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused"
                                     Value="True">
                                <Setter TargetName="Bd"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Result card item container style -->
        <Style x:Key="ResultCard"
               TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
            <Setter Property="Margin"
                    Value="0,0,0,10"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="CardBorder"
                                Background="{StaticResource CardBg}"
                                BorderBrush="{StaticResource CardBorder}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="18,16">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1"
                                                  BlurRadius="6"
                                                  Opacity="0.06"
                                                  Color="#3C2415"/>
                            </Border.Effect>
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="CardBorder"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="CardBorder"
                                        Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2"
                                                          BlurRadius="14"
                                                          Opacity="0.12"
                                                          Color="#3C2415"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern flat TabControl style -->
        <Style x:Key="FlatTabControl"
               TargetType="TabControl">
            <Setter Property="Background"
                    Value="{StaticResource PageBg}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Tab strip background -->
                            <Border Grid.Row="0"
                                    Background="#2E1A0C"
                                    Padding="6,0,6,0">
                                <TabPanel IsItemsHost="True"
                                          Margin="0"/>
                            </Border>
                            <!-- Thin accent line under tabs -->
                            <Border Grid.Row="0"
                                    VerticalAlignment="Bottom"
                                    Height="2"
                                    Background="{StaticResource AccentBrush}"/>
                            <!-- Content area -->
                            <Border Grid.Row="1"
                                    Background="{StaticResource PageBg}">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern flat TabItem style -->
        <Style x:Key="FlatTabItem"
               TargetType="TabItem">
            <Setter Property="Foreground"
                    Value="#B5A898"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder"
                                Background="Transparent"
                                Padding="14,8,14,8"
                                Margin="0,4,2,0"
                                CornerRadius="6,6,0,0">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="TabBorder"
                                        Property="Background"
                                        Value="#3C2415"/>
                                <Setter Property="Foreground"
                                        Value="#F5F0E8"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver"
                                               Value="True"/>
                                    <Condition Property="IsSelected"
                                               Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="TabBorder"
                                        Property="Background"
                                        Value="#3C241580"/>
                                <Setter Property="Foreground"
                                        Value="#D4C4B0"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:SearchViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header bar -->
            <RowDefinition Height="*"/>
            <!-- Tabbed content area -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header bar -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBg}"
                Padding="24,14">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left"
                            VerticalAlignment="Center">
                    <TextBlock Text="Theoria"
                               FontSize="24"
                               FontWeight="Bold"
                               FontFamily="Georgia, 'Times New Roman', serif"
                               Foreground="{StaticResource HeaderFg}"/>
                    <TextBlock Text="THEOLOGY &amp; PHILOSOPHY SEARCH ENGINE"
                               FontSize="9"
                               Foreground="#B5A898"
                               Margin="2,2,0,0"/>
                </StackPanel>
                <!-- Subtle loading indicator in the header -->
                <ProgressBar DockPanel.Dock="Right"
                             IsIndeterminate="{Binding IsSearching}"
                             Visibility="{Binding IsSearching, Converter={StaticResource BoolToVis}}"
                             Width="120"
                             Height="3"
                             VerticalAlignment="Center"
                             Margin="20,0,0,0"
                             BorderThickness="0"
                             Foreground="{StaticResource AccentBrush}"
                             Background="#4A3928"/>
                <Border/>
            </DockPanel>
        </Border>

        <!-- Row 1: Tab control -->
        <TabControl x:Name="MainTabs"
                    Grid.Row="1"
                    Style="{StaticResource FlatTabControl}">

            <!-- Search Tab (always present, not closeable) -->
            <TabItem Style="{StaticResource FlatTabItem}">
                <TabItem.Header>
                    <TextBlock Text="Search"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Search bar -->
                        <RowDefinition Height="*"/>
                        <!-- Results -->
                        <RowDefinition Height="Auto"/>
                        <!-- Load more + status -->
                    </Grid.RowDefinitions>

                    <!-- Search input -->
                    <Border Grid.Row="0"
                            Padding="20,16"
                            Background="{StaticResource PageBg}">
                        <DockPanel>
                            <Button Content="Search"
                                    Command="{Binding SearchCommand}"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource SearchBtn}"
                                    Margin="10,0,0,0"/>
                            <TextBox x:Name="SearchBox"
                                     Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource SearchInput}"
                                     VerticalContentAlignment="Center">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return"
                                                Command="{Binding SearchCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                        </DockPanel>
                    </Border>

                    <!-- Search results -->
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Results}"
                              Background="{StaticResource PageBg}"
                              BorderThickness="0"
                              Padding="16,6,16,6"
                              ItemContainerStyle="{StaticResource ResultCard}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <!-- Domain + scholarly badge row -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,4">
                                        <TextBlock Text="{Binding Domain}"
                                                   FontSize="10"
                                                   Foreground="{StaticResource AccentBrush}"
                                                   VerticalAlignment="Center"/>
                                        <!-- Scholarly badge (only visible when IsScholarly is true) -->
                                        <Border Background="#E8F5E0"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="8,0,0,0"
                                                Visibility="{Binding IsScholarly, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="ACADEMIC"
                                                       Foreground="#3A6B2A"
                                                       FontSize="9"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock FontSize="16"
                                               FontWeight="SemiBold"
                                               FontFamily="Georgia, 'Times New Roman', serif">
                                        <Hyperlink NavigateUri="{Binding Url}"
                                                   RequestNavigate="Hyperlink_RequestNavigate"
                                                   Foreground="{StaticResource LinkColor}"
                                                   TextDecorations="None">
                                            <Run Text="{Binding Title, Mode=OneWay}"/>
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Url}"
                                               FontSize="11"
                                               Foreground="{StaticResource UrlColor}"
                                               Margin="0,4,0,6"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Snippet}"
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               Foreground="{StaticResource TextPrimary}"
                                               LineHeight="21"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Load More + Status -->
                    <Border Grid.Row="2"
                            Background="{StaticResource PageBg}"
                            Padding="20,6,20,12">
                        <StackPanel>
                            <Button Content="Load more results"
                                    Command="{Binding LoadMoreCommand}"
                                    Style="{StaticResource LoadMoreBtn}"
                                    HorizontalAlignment="Center"
                                    Margin="0,4,0,8"
                                    Visibility="{Binding CanLoadMore, Converter={StaticResource BoolToVis}}"/>
                            <TextBlock Text="{Binding StatusText}"
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondary}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Row 2: Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource HeaderBg}"
                Padding="20,10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource TextSecondary}"
                               FontSize="11">
                        <Run Text="© "/><Run x:Name="FooterYear"/><Run Text="  Aidan Fahey"/>
                    </TextBlock>
                    <TextBlock Text="·"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"
                               Margin="8,0"/>
                    <Border Background="#8B6F4E"
                            CornerRadius="3"
                            Padding="6,2">
                        <TextBlock Text="MIT Licensed"
                                   Foreground="#F5F0E8"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <Button DockPanel.Dock="Right"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="6,3"
                        VerticalAlignment="Center"
                        Click="GitHubLink_Click">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="14"
                                 Height="14"
                                 Margin="0,0,6,0">
                            <Canvas Width="16"
                                    Height="16">
                                <Path Fill="{StaticResource TextSecondary}"
                                      Data="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="GitHub"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
